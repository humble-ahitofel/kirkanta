{#
  This template acts as a trait since we want to use the same form layout
  on the 'staff' tab of Organisation form.
#}

{% block form_body %}
  <fieldset class="form-section">
    <legend>{% trans %}Personal details{% endtrans %}</legend>
    {{ form_row(form.first_name) }}
    {{ form_row(form.last_name) }}
  </fieldset>

  <fieldset class="form-section">
    <legend>{% trans %}Contact details{% endtrans %}</legend>
    {{ form_row(form.email) }}
    {{ form_row(form.email_public) }}
    {{ form_row(form.phone) }}
  </fieldset>

  <fieldset class="form-section">
    <legend>{% trans %}Work info{% endtrans %}</legend>
    {% if form.library is defined %}
      {{ form_row(form.library) }}
    {% else %}
      <p class="h5 mb-3">{{ form.vars.value.library }}</p>
    {% endif %}
    {{ form_row(form.head) }}
    {{ form_row(form.job_title) }}
    {{ form_row(form.responsibility) }}
    {{ form_row(form.qualities) }}
  </fieldset>
{% endblock %}
